  <script>
    document.getElementById('question-form').addEventListener('submit', function(e) {
      e.preventDefault();
      const form = e.target;
      const formData = new FormData(form);
      fetch(form.action, {
        method: form.method,
        body: formData,
      }).then(response => {
        if (response.ok) {
          document.getElementById('result').textContent = 'Thank you! Your question has been submitted.';
          form.reset();
        } else {
          document.getElementById('result').textContent = 'Oops! Something went wrong. Please try again later.';
        }
      }).catch(() => {
        document.getElementById('result').textContent = 'Oops! Something went wrong. Please try again later.';
      });
    });
  </script>
